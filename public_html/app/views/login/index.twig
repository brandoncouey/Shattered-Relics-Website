            {{ content|raw }}

            <div class="card border-0 bg-blur">
                <div class="card-body">
                    <h5 class="text-center my-4">Sign In</h5>
                    <form action="{{ url('login') }}" method="post" id="loginForm">
                        <div class="form-group mb-4">
                            <input class="form-control form-control-lg" 
                                name="email" 
                                id="email" 
                                placeholder="Email Address"
                                type="email">
                        </div>
                        <div class="form-group mb-5">
                            <input class="form-control form-control-lg" 
                                name="password" 
                                id="password" 
                                placeholder="Password"
                                type="password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info btn-block text-white">
                                Continue
                            </button>
                        </div>
                        <div class="form-group">
                            <a href="{{ url('login?discord') }}" 
                                class="btn btn-discord btn-block ml-0 mt-0">
                                Login with Discord
                            </a>
                        </div>

                        <div class="text-center text-muted">
                            <a href="{{ url('') }}" class="text-muted">Cancel</a> | 
                            <a href="{{ url('register') }}" class="text-muted">Create an Account</a>
                        </div>
                            
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
