    <div class="d-flex align-items-center">
        <div class="flex-fill" style="max-width:350px;margin:auto;">

            {% if error is defined %}
            <p class="text-danger">{{ error }}</p>
            {% elseif success is defined %}
            <p class="text-success">{{ success }}</p>
            {% else %}
